<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Products" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!-- Primary variant -->
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_teal_light</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <!-- Secondary variant -->
        <item name="colorSecondaryVariant">@color/secondary_teal</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_grey</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/surface_grey_light</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/surface_grey</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>
</resources>