<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Products" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Primary variant -->
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_teal</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Secondary variant -->
        <item name="colorSecondaryVariant">@color/secondary_teal_dark</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_grey_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/surface_white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.Products.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/findit_violet</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Products</item>
    </style>
</resources>